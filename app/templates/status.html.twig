{% extends 'layout.html.twig' %}
{% block title %}M2M Circuit - Status{% endblock %}
{% block content %}
    <h2>M2M Circuit</h2>
    <h3>Current status of components:</h3>

    <table style="width:50%">

        <tr>
            <th>Sim Number</th>
            <td>{{ msisdn }}</td>
        </tr>

        <tr>
            <th>Name</th>
            <td>{{ name }}</td>
        </tr>

        <tr>
            <th>Email</th>
            <td>{{email}}</td>
        </tr>
    </table>

    <br>

    <table style="width:100%">
        <tr>
            <th>Switch</th>
            <th>Status</th>
        </tr>

        <tr>
            <td>SWITCH 1</td>
            <td>{{ switch1 }}</td>
        </tr>

        <tr>
            <td>SWITCH 2</td>
            <td>{{ switch2 }}</td>
        </tr>

        <tr>
            <td>SWITCH 3</td>
            <td>{{ switch3 }}</td>
        </tr>

        <tr>
            <td>SWITCH 4</td>
            <td>{{ switch4 }}</td>
        </tr>
    </table>

    <br>
    <br>

    <table style="width:100%">
        <tr>
            <th>Component</th>
            <th>Status</th>
        </tr>

        <tr>
            <td>FAN</td>
            <td>{{ fan }}</td>
        </tr>

        <tr>
            <td>HEATER</td>
            <td>{{ temp }}</td>
        </tr>

        <tr>
            <td>KEYPAD</td>
            <td>{{ keypad }}</td>
        </tr>
    </table>

    <br>

    <a href="./">Back</a>
{% endblock %}
